<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:DomainSetBidsApplication.Models;assembly=DomainSetBidsApplication">
    
    <!--DataType="{x:Type models:LogEntity}"-->
    <DataTemplate x:Key="LogTemplateKey">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,0,10,0" Text="{Binding Date, StringFormat={}{0:dd.MM.yyyy hh:mm:ss}}" />
            <TextBlock Grid.Column="1" Margin="0,0,10,0">
                <Run Text="| " />
                <Run Text="{Binding Name}"/>
                <Run Text=" |" />
            </TextBlock>
            <TextBlock Grid.Column="2" TextWrapping="Wrap" Text="{Binding Description}" />
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>